<div class="row" data-controller="modalidades">

	<div class="col-lg-12">
		<div class="float-right">
			<%= link_to "Novo", new_modalidade_path, class: "btn btn-bold btn-success" %>
		</div>
	</div>
	
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Modalidades</h4>
			</div>

			<div class="card-body">
				<table class="table">
					<thead>
						<tr>
						<th>Nome</th>
						<th style="width: 160px;">Ações</th>
						</tr>
					</thead>
					<tbody>
						<% @modalidades.each do |modalidade| %>
							<tr id="modalidade-item-<%= modalidade.id %>">
								<td><%= modalidade.nome %></td>

								<td class="project-actions">
									<%= link_to edit_modalidade_path(modalidade), class: "btn btn-icona btn-neutral btn-info btn-sm" do %>
										<!-- <i class="icon-pencil"></i> -->
										<i class="fas fa-pen"></i>
										
									<% end if can? :update, modalidade %>
									<%= link_to "javascript:void(0);", 
										'data-id': modalidade.id, 
										"data-action": "modalidades#delete", 
										class: "btn btn-icona btn-neutral btn-danger btn-sm delete" do 
									%>
										<i class="fas fa-trash"></i>
									<% end if can? :destroy, modalidade %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>