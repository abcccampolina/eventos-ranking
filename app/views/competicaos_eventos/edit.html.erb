<div class="card" data-controller="competicaos_eventos" data-competicaos_eventos-action-form="edit">

    <div class="card-header">

        <div class="row">
            <div class="col-lg-12">
                <h4 class="card-title">Competição</h4>
            </div>

            <div class="col-sm-3">
                <%= link_to 'Imprimir Competidores', 
					catalogos_path(competicaos_evento_id: params[:id], format: :pdf), 
					target: :_blank, class: 'btn btn-sm btn-default text-break-center w-100' 
				%>
            </div>

            <div class="col-sm-3">
                <%= link_to 'Imprimir Sumula', 
					sumula_index_path(competicaos_evento_id: params[:id], format: :pdf), 
					target: :_blank, class: 'btn btn-sm btn-default text-break-center w-100' 
				%>
            </div>

            <div class="col-sm-3">
                <%= link_to 'Gerar Inscrições / Catalogo', 
					gerar_inscritos_path(competicaos_evento_id: params[:id]), 
					class: 'btn btn-sm btn-danger text-break-center w-100'
				%>
                <small>*Verifica a competição antecessora</small>
            </div>

        </div>

    </div>

    <%= render 'form' %>
    
</div>

<%= render 'juris_competicao' %>

<%= render 'catalogo_competicao' %>

<%= render 'catalogo_nomes' %>

<%= render 'inscritos_competicao' %>