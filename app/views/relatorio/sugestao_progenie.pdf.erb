<h4 class="text-center">
    <strong>
        <%= $evento.nome %>
    </strong>
</h4>

    <table class="table" style="background:#fafafa">
        <thead>
            <tr>
            <th style="width: 120px; text-align: center;">Pai</th>
            <th style="width: 120px; text-align: center;" >Animal </th>
            </tr>
        </thead>
        <tbody>
        <% @inscritos_evento.sort_by {|i| i.pai_animal_id }.group_by {|i| i.pai_animal_id }.each do |pai_animal, inscricoes| %>
            <%if inscricoes.count > 1%>
                <tr>
                    <td>
                        <strong><%= SrgAnimal.find(pai_animal).nome_completo %></strong>
                    </td>
                    <td>
                        <% inscricoes.each do |animal| %>
                            <%= animal.nome_animal %> <br>
                        <%end%>
                    </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
    </table>

